<Window x:Class="Machtsverheffing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Machtsverheffing"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="calculateButton" Content="Berekenen" HorizontalAlignment="Left" Margin="593,124,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="calculateButton_Click"/>
        <Button x:Name="clearButton" Content="Wissen" HorizontalAlignment="Left" Margin="593,180,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="clearButton_Click"/>
        <Button x:Name="closeButton" Content="Afsluiten" HorizontalAlignment="Left" Margin="593,240,0,0" VerticalAlignment="Top" Width="80" Height="30" Click="closeButton_Click"/>
        <TextBox x:Name="resultTextBox" HorizontalAlignment="Left" Margin="121,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="442" Height="243" IsEnabled="False"/>
        <Label Content="Getal:" HorizontalAlignment="Left" Margin="121,77,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="getalTextBox" HorizontalAlignment="Left" Margin="121,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Loaded="getalTextBox_Loaded"/>

    </Grid>
</Window>
